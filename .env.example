# 环境变量配置示例文件
# 复制此文件为 .env 并修改相应的值

# Flask 应用配置
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
FLASK_ENV=development

# 数据库配置
DATABASE_URL=sqlite:///management_system.db
# PostgreSQL 示例:
# DATABASE_URL=postgresql://username:password@localhost:5432/management_db
# MySQL 示例:
# DATABASE_URL=mysql://username:password@localhost:3306/management_db

# 服务器配置
HOST=0.0.0.0
PORT=8081
DEBUG=True

# 邮件配置（如果需要）
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# 日志配置
LOG_LEVEL=INFO

# 文件上传配置
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# 安全配置
SESSION_COOKIE_SECURE=False  # 生产环境设为 True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CORS 配置
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# JWT 配置
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24小时（秒）
JWT_ALGORITHM=HS256

# 分页配置
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100